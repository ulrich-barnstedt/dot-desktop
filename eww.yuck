(include "./widgets/main-layout.yuck")
(include "./widgets/bar-layout.yuck")

(defwindow main
    :monitor "<primary>"
    :geometry (geometry :anchor "center")
    :stacking "bg"
    :wm-ignore false
    :windowtype "desktop"
    :class "window"
    :focusable true
    (main-layout)
)

(defwindow bar
    :monitor "<primary>"
    :geometry (geometry :anchor "center left")
    :stacking "bg"
    :wm-ignore false
    :windowtype "desktop"
    :class "window"
    :focusable true
    (bar-layout)
)